<Window x:Class="BatailleNavaleGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatailleNavaleGraphique"
        mc:Ignorable="d"
        Title="Bataille Navale Pro 2.0" Height="450" Width="800">

    <Window.Resources>
        <BitmapImage x:Key="Welcome" UriSource="welcome.png" />
    </Window.Resources>
    
    <StackPanel>

        <StackPanel.Background>
            <ImageBrush ImageSource="wallpaper.jpg" />
        </StackPanel.Background>

        <!--
        <Label x:Name="Bienvenue" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Old English Text MT">Bienvenue</Label>
        -->
        <Image Source="{StaticResource ResourceKey=Welcome}" />
        
        <Button Opacity="0.8" x:Name="Options" Click="Options_Click" Height="40" Margin="0,0,600,0" Content="Options"/>
        <Button Opacity="0.7" x:Name="NouvellePartie" Click="NewGame_Click" Margin="600,0,0,0" Height="40" Content="Nouvelle partie"/>
        <Button Opacity="0.8"  x:Name="ChargerPartie" Height="40" Margin="0,0,600,0" Content="Charger une partie"/>
        

    </StackPanel>
</Window>
