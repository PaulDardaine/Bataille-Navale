<Window x:Class="BatailleNavaleGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatailleNavaleGraphique"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="Bienvenue" HorizontalAlignment="Center" VerticalAlignment="Center">Bienvenue</Label>

        <Button x:Name="NouvellePartie" Click="NewGame_Click">Nouvelle partie</Button>
        <Button x:Name="ChargerPartie">Charger une partie</Button>

    </StackPanel>
</Window>
